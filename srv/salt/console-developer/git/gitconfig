[alias]
  st = status
  ci = commit
  br = branch -vv
  bra = branch -vva
  co = checkout
  df = diff
  dc = diff --cached
  lg = log -p --follow
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
  ignored = !git ls-files -v `git rev-parse --show-toplevel` | grep "^[a-z]"
  rup = remote update --prune
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  autocrlf = input
  fileMode = false
  pager = less --quit-if-one-screen --no-init
[diff]
  compactionHeuristic = true
[interactive]
  diffFilter = diff-highlight.pl
[pager]
  diff = diff-highlight.pl | less --quit-if-one-screen --no-init
  log = diff-highlight.pl | less --quit-if-one-screen --no-init
  show = diff-highlight.pl | less --quit-if-one-screen --no-init
[push]
  default = current
  recurseSubmodules = check
[stash]
  showStat = true
